generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  role          String    @default("doctor")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model Account {
  id                     String   @id @default(cuid())
  accountId              String
  providerId             String
  userId                 String
  accessToken            String?
  refreshToken           String?
  idToken                String?
  accessTokenExpiresAt   DateTime?
  refreshTokenExpiresAt  DateTime?
  scope                  String?
  password               String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
  @@index([userId])
  @@unique([providerId, accountId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verifications")
  @@index([identifier])
}

// Enums for Pregnancy and Ultrasound
enum PregnancyStatus {
  NOT_PREGNANT
  FIRST_TRIMESTER
  SECOND_TRIMESTER
  THIRD_TRIMESTER
  POSTPARTUM
}

enum UltrasoundType {
  FIRST_TRIMESTER
  SECOND_THIRD_TRIMESTER
  GYNECOLOGICAL
}

enum CertificateType {
  REST
  MEDICAL_REPORT
  MEDICAL_CONSTANCY
  FITNESS
  DISABILITY
  PREGNANCY
  OTHER
}

enum DocumentType {
  LAB_RESULT
  CYTOLOGY
  BIOPSY
  ULTRASOUND
  XRAY
  MRI_CT
  EXTERNAL_REPORT
  PRESCRIPTION
  OTHER
}

model Patient {
  id                   String                 @id @default(cuid())
  medicalRecordNumber  String                 @unique // Número de historia médica
  firstName            String
  lastName             String
  cedula               String                 @unique
  dateOfBirth          DateTime
  gender               String
  phone                String
  email                String?
  address              String
  city                 String                 @default("San Cristóbal")
  state                String                 @default("Táchira")
  bloodType            String?
  weight               Float?                 // Peso en kg
  height               Float?                 // Talla en cm
  allergies            String?
  emergencyContact     String?
  profileImageUrl      String?
  notes                String?                @db.Text
  isActive             Boolean                @default(true)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  // New fields for v2
  pregnancyStatus      PregnancyStatus        @default(NOT_PREGNANT)
  maritalStatus        String?                // Soltero, Casado, Divorciado, Viudo, Unión Libre
  occupation           String?
  nationality          String?                @default("Venezolana")
  educationLevel       String?                // Primaria, Secundaria, Universitaria, Postgrado
  religion             String?
  // Relations
  appointments         Appointment[]
  medicalRecords       MedicalRecord[]
  prescriptions        Prescription[]
  images               MedicalImage[]
  gynecologicalProfile GynecologicalProfile?
  ultrasounds          UltrasoundReport[]
  certificates         MedicalCertificate[]

  @@map("patients")
  @@index([cedula])
  @@index([lastName])
  @@index([medicalRecordNumber])
}

model GynecologicalProfile {
  id                    String   @id @default(cuid())
  patientId             String   @unique
  // Antecedentes Obstétricos
  gestas                Int?     // Número total de embarazos
  cesareas              Int?     // Número de cesáreas
  ectopicos             Int?     // Número de embarazos ectópicos
  partos                Int?     // Número de partos
  abortos               Int?     // Número de abortos
  molas                 Int?     // Número de molas
  // Ciclos Menstruales (encriptado)
  menstrualCycleDays    Int?     // Cada cuántos días (ej: 28)
  menstrualDuration     Int?     // Cuántos días dura (ej: 5)
  menstrualPain         String?  // Nivel de dolor: none, mild, moderate, severe
  lastMenstrualPeriod   DateTime? // Fecha de última menstruación (FUM)
  menopause             Boolean  @default(false)
  menopauseAge          Int?     // Edad de menopausia si aplica
  // Información adicional (encriptado)
  contraceptiveMethod   String?  @db.Text // Método anticonceptivo actual
  sexuallyActive        Boolean? // ¿Sexualmente activa?
  parity                String?  // Fórmula obstétrica (ej: "G3P2A1")
  notes                 String?  @db.Text // Notas adicionales
  // New fields for v2
  menarche              Int?     // Edad de primera menstruación
  sexarche              Int?     // Edad de primera relación sexual
  numberOfPartners      Int?     // Número de parejas sexuales
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  patient               Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("gynecological_profiles")
  @@index([patientId])
}

model MedicalRecord {
  id                 String   @id @default(cuid())
  patientId          String
  consultationType   String
  date               DateTime @default(now())
  chiefComplaint     String   @db.Text
  symptoms           String?  @db.Text
  diagnosis          String?  @db.Text
  treatment          String?  @db.Text
  vitalSigns         String?
  personalHistory    String?  @db.Text
  gynecologicHistory String?
  obstetricalHistory String?
  physicalExam       String?  @db.Text
  treatmentPlan      String?  @db.Text
  followUpDate       DateTime?
  notes              String?  @db.Text
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  patient            Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("medical_records")
  @@index([patientId])
  @@index([date])
}

model Appointment {
  id           String   @id @default(cuid())
  patientId    String
  date         DateTime
  duration     Int      @default(30)
  type         String
  status       String   @default("scheduled")
  reason       String?
  notes        String?  @db.Text
  reminderSent Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  patient      Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("appointments")
  @@index([patientId])
  @@index([date])
  @@index([status])
}

model Prescription {
  id           String   @id @default(cuid())
  patientId    String
  date         DateTime @default(now())
  medications  String   @db.Text
  instructions String?  @db.Text
  diagnosis    String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  patient      Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("prescriptions")
  @@index([patientId])
}

model MedicalImage {
  id            String        @id @default(cuid())
  patientId     String
  fileName      String
  fileUrl       String
  fileType      String
  fileSize      Int
  mimeType      String
  description   String?
  date          DateTime      @default(now())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  // New fields for v2
  documentType  DocumentType?
  documentDate  DateTime?
  laboratory    String?
  physician     String?
  results       String?       @db.Text
  isNormal      Boolean?
  tags          String[]
  patient       Patient       @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("medical_images")
  @@index([patientId])
  @@index([documentType])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  userEmail  String
  action     String
  entity     String
  entityId   String?
  details    String?  @db.Text
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@map("audit_logs")
  @@index([userId])
  @@index([entity])
  @@index([createdAt])
}

model UltrasoundReport {
  id                  String           @id @default(cuid())
  patientId           String
  date                DateTime         @default(now())
  type                UltrasoundType
  gestationalAge      String?          // Edad gestacional (ej: "12 semanas 3 días")
  reasonForStudy      String           @db.Text // Motivo del estudio
  lastMenstrualPeriod DateTime?        // FUM
  estimatedDueDate    DateTime?        // FPP
  weight              Float?           // Peso al momento del eco
  height              Float?           // Talla al momento del eco
  bloodPressure       String?          // Presión arterial
  // JSON fields for type-specific measurements
  measurements        Json?            // Mediciones específicas según tipo
  findings            Json?            // Hallazgos específicos según tipo
  otherFindings       String?          @db.Text // Otros hallazgos
  diagnoses           String           @db.Text // Diagnósticos/Conclusiones
  recommendations     String?          @db.Text // Recomendaciones
  isActive            Boolean          @default(true)
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  patient             Patient          @relation(fields: [patientId], references: [id], onDelete: Cascade)
  images              UltrasoundImage[]

  @@map("ultrasound_reports")
  @@index([patientId])
  @@index([date])
  @@index([type])
}

model UltrasoundImage {
  id            String           @id @default(cuid())
  ultrasoundId  String
  fileName      String
  fileUrl       String
  fileSize      Int
  mimeType      String
  description   String?
  createdAt     DateTime         @default(now())
  ultrasound    UltrasoundReport @relation(fields: [ultrasoundId], references: [id], onDelete: Cascade)

  @@map("ultrasound_images")
  @@index([ultrasoundId])
}

model MedicalCertificate {
  id            String          @id @default(cuid())
  patientId     String
  date          DateTime        @default(now())
  type          CertificateType
  title         String          // Título del certificado
  content       String          @db.Text // Contenido principal
  restDays      Int?            // Días de reposo (solo para REST)
  validFrom     DateTime?       // Válido desde
  validUntil    DateTime?       // Válido hasta
  diagnosis     String?         // Diagnóstico asociado
  issuedBy      String          // Nombre del médico
  licenseNumber String          // Número de colegiatura/licencia
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  patient       Patient         @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@map("medical_certificates")
  @@index([patientId])
  @@index([type])
  @@index([date])
}
